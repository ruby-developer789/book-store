$("#<%= @cart_item.product_id %>").remove();
<% if current_user.cart_items.count == 0 %>
  $(".products").html("<tr><td colspan='5' class='text-center'>Cart is empty</td></tr>");
  $(".checkout").addClass('hidden');
<% else %>
  $(".checkout").removeClass('hidden');
<% end %>
$("#product-quantity").html("<%= current_user.cart_items_count %>");
$(".total-price").html("<%= total_price %>");
$("#notice").html('<div class="alert alert-danger">Removed from cart.</div>');
setTimeout(function(){
  $('.alert').slideUp(500);
}, 2000);